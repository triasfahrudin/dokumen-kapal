<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/form_masalayar_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/etFormName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_top"
            android:hint="Nama"
            android:inputType="none"
            android:padding="15dp"
            android:textIsSelectable="false" />

        <EditText
            android:id="@+id/etFormNomorBukuPelaut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_middle"

            android:hint="Nomor Buku Pelaut"
            android:inputType="text"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etFormUploadBukuPelaut"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text_middle"
                android:hint="File Buku Pelaut"
                android:inputType="text"
                android:padding="15dp"></EditText>

            <Button
                android:id="@+id/btnFormUploadBukuPelaut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal|center_vertical"
                android:text="Cari"
                android:textAlignment="center"
                android:textColor="#FE5295"
                android:textStyle="bold"></Button>

        </LinearLayout>


        <EditText
            android:id="@+id/etFormNomorIjazah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_middle"

            android:hint="Nomor Ijazah Laut"
            android:inputType="text"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etFormUploadIjazah"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text_middle"
                android:hint="File Ijazah Laut"
                android:inputType="text"
                android:padding="15dp"
                android:text=""></EditText>

            <Button
                android:id="@+id/btnFormUploadIjazah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Cari"
                android:textAlignment="center"
                android:textColor="#FE5295"
                android:textStyle="bold"></Button>

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#EFF0F1"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="KIRIM PERMOHONAN"
            android:textAllCaps="false"
            android:textColor="#FE5295"
            android:textSize="17sp" />


    </LinearLayout>
</ScrollView>